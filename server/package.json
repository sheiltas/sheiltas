{
    "name": "sheilta_deshmaia",
    "version": "1.0.0",
    "main": "index.js",
    "author": "Tal Efronny",
    "license": "MIT",
    "private": true,
    "scripts": {
        "start": "node -r ts-node/register  ./src/index.ts",
        "start:dev": "node --inspect=5858 -r ts-node/register -r dotenv/config ./src/index.ts",
        "start:watch": "nodemon",
        "build": "tsc"
    },
    "dependencies": {
        "axios": "^0.21.0",
        "bcrypt": "^5.0.0",
        "express": "^4.17.1",
        "helmet": "^4.2.0",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.11.8"
    },
    "devDependencies": {
        "@types/axios": "^0.14.0",
        "@types/bcrypt": "^3.0.0",
        "@types/express": "^4.17.9",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/mongoose": "^5.10.3",
        "@types/node": "^14.14.16",
        "dotenv": "^8.2.0",
        "eslint": "^7.16.0",
        "eslint-plugin-import": "^2.22.1",
        "nodemon": "^2.0.6",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3"
    },
    "prettier": {
        "singleQuote": true,
        "arrowParens": "always",
        "printWidth": 110,
        "tabWidth": 4,
        "trailingComma": "none"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "npm run start:dev",
        "ext": "ts"
    }
}
