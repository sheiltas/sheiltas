{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "types": ["node"],
        "rootDirs": ["src", "../client/src"],
        "jsx": "react",
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
